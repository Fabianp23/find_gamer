<%= form_for @post, :remote => true do |f| %>
  <%= f.label :console %>
  <br>
  <%= f.select :console, [[nil],['Xbox One'],['PlayStation 4'],['Xbox 360'],['PlayStation3']], :selected => nil %>
  <br>

  <%= f.label :gamertag %>
  <br>
  <%= f.text_field :gamertag, maxlength: "15", size: "20" %>
  <br>

  <%= f.label :game %>
  <br>
  <%= f.text_field :game, maxlength: "50", size: "20" %>
  <br>

  <%= f.label :description %>
  <br>
  <%= f.text_area :description, maxlength: "75", size: "18x4" %>
  <br>

  <div id="language-button">
    <%= f.label :language %>
    <br>
    <%= f.text_field :language, maxlength: "15", size: "20", :value => "Any Language" %>
    <br>
  </div>

  <%= f.label :microphone %>
  <br>
  <%= f.check_box :microphone %>
  <br>

  <%= f.submit "Post" %>

<% end %>
