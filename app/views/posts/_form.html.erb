<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for(@post) do |f| %>

  <p><%= f.label :console %><br>
    <%= f.text_field :console %>
  </p>
  <p><%= f.label :gamertag %><br>
    <%= f.text_field :gamertag %>
  </p>
  <p><%= f.label :game %><br>
    <%= f.text_field :game %>
  </p>
  <p><%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p><%= f.label :language %><br>
    <%= f.text_field :language %>
  </p>
  <p><%= f.label :microphone %><br>
    <%# f.text_field :microphone %>
    <%= f.check_box :microphone %>
  </p>
  <p>
  <%= f.submit %>
  </p>

<% end %>
