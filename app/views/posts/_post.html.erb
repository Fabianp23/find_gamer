<div class="new-post">
  <div id='post-left'>
    <div id='gamertag'><%= post.gamertag %></div>
    <div id='time-ago'><%= time_ago_in_words(post.created_at) %> ago</div>
    <div id='language'><%= post.language %></div>
    <div id='microphone'><%= headset_img post %></div>
  </div>
  <div id='post-middle'>
    <div id='game'><%= link_to post.game, post.game %></div>
    <div id='description'><p><%= post.description %></p></div>
  </div>
  <div id='cons'>
    <div id='console'><%= console_img post %><p><%= post.console %></p></div>
  </div><br>
</div>
